html
    head
        title=title
        link(
        href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
        rel='stylesheet'
        )
    body
        div.container

            div.page-header
                h1 Distance Calculator By Issarapong Poesua
                h2 key -> name -> cityID -> cityName -> lat -> long
            if errors
                each error in errors
                    div.alert.alert-danger
                        span #{error.error}
            if saved
                div.alert.alert-success
                    span Your profile has been saved
            form.files-form.form-horizontal(method='post', enctype='multipart/form-data', role='form', action='/uploads', id='uploadForm', ref='uploadForm')
                input(name='_csrf', type='hidden', value=csrfToken)

                div.form-group
                    label.col-sm-4 Origins File
                    div.col-sm-8
                        input.form-control(
                        required=true,
                        name='originsFile',
                        type='file',
                        accept=".csv")
                div.form-group
                    label.col-sm-4 Destinations File
                    div.col-sm-8
                        input.form-control(
                        required=true,
                        name='destinationsFile',
                        type='file',
                        accept=".csv")
                div.form-group
                    div.col-sm-offset-4.col-sm-8
                        button.login.btn.btn-primary(type='submit') Perform Upload