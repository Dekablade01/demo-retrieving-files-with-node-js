html
    head
        title=title
        link(
        href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
        rel='stylesheet'
        )
    body
        div.container

            div.page-header
                h1 Uploading Files Form
            if errors
                each error in errors
                    div.alert.alert-danger
                        span #{error.error}
            if saved
                div.alert.alert-success
                    span Your profile has been saved
            form.login-form.form-horizontal(method='post', role='form', action='/uploads')
                input(name='_csrf', type='hidden', value=csrfToken)

                div.form-group
                    label.col-sm-4 Origins File
                    div.col-sm-8
                        input.form-control(
                        required=true,
                        name='origins-file',
                        type='file')
                div.form-group
                    label.col-sm-4 Destinations File
                    div.col-sm-8
                        input.form-control(
                        required=true,
                        name='destinations-file',
                        type='file')
                div.form-group
                    div.col-sm-offset-4.col-sm-8
                        button.login.btn.btn-primary(type='submit') Perform Upload